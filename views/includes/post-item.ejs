<article class="post-item">
  <h2><%= post.title %></h2>
  <p class="post-item-author">By <%= post.author_name %></p>
  <p><%= post.body.slice(0,50)+"..." %><a href="...">View Post</a></p>
  <time
    ><%= post.date.toLocaleString('default',{ dateStyle: 'full', timeStyle:
    'long', }) %></time
  >
  <div class="post-actions">
    <button class="btn btn-alt">Delete Post</button>
    <a href="...">Edit Post</a> 
    <a class="btn" href="...">View Post</a>
  </div>
</article>
